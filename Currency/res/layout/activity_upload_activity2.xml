<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.currency.UploadActivity1" >

 <ImageView 
     android:id="@+id/imgPreview2"
     android:layout_width="fill_parent"
     android:layout_height="200dp"
     android:visibility="gone"
     />
 
 <TextView 
     android:id="@+id/txtPercentage2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/imgPreview2"
     android:textSize="30dp"
     />
 
 <ProgressBar 
     android:id="@+id/progressBar2"
     style="?android:attr/progressBarStyleHorizontal"
     android:layout_width="fill_parent"
     android:layout_height="25dp"
     android:visibility="gone"
     android:layout_below="@id/txtPercentage2"
     />
 
 <Button 
     android:id="@+id/btnUpload2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@drawable/upi"
     android:layout_below="@id/progressBar2"/>

</RelativeLayout>
